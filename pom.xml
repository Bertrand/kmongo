    <properties>
        <!-- dependencies -->
        <kotlin.version>1.2.0</kotlin.version>
        <mongo.version>3.5.0</mongo.version>
        <coroutine.version>0.19</coroutine.version>
        <jackson.version>2.9.2</jackson.version>
        <jackson-module.version>2.9.2</jackson-module.version>
        <bson4jackson.version>2.8.0</bson4jackson.version>

        <!-- test dependencies -->
        <flapdoodle.version>2.0.0</flapdoodle.version>
        <fongo.version>2.1.0</fongo.version>
        <sl4j.version>1.7.25</sl4j.version>
        <junit.version>4.12</junit.version>

        <!-- plugins -->
        <plugin.surefire.version>2.20.1</plugin.surefire.version>
        <plugin.source.version>3.0.1</plugin.source.version>
        <plugin.release.version>2.5.3</plugin.release.version>
        <plugin.dokka.version>0.9.15</plugin.dokka.version>
        <plugin.gpg.version>1.6</plugin.gpg.version>
        <plugin.nexus-staging.version>1.6.8</plugin.nexus-staging.version>

        <sourceDirectory>${project.basedir}/src/main/kotlin</sourceDirectory>
        <testSourceDirectory>${project.basedir}/src/test/kotlin</testSourceDirectory>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

