            </dependency>

            <dependency>
                <groupId>org.litote</groupId>
                <artifactId>bson4jackson-fork</artifactId>
                <version>${bson4jackson.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>com.fasterxml.jackson.core</groupId>
                        <artifactId>jackson-core</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>com.fasterxml.jackson.core</groupId>
